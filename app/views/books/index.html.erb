    </table>

  <% @booklists.each do |allbooks| %>
  <p>title:<%= allbooks.title %></p>
  <p>body:<%= allbooks.body %></p>
  <%= link_to 'Show', book_path(allbooks.id) %>
    <%= link_to 'Edit', edit_book_path(allbooks.id) %>
    <%= link_to 'Destroy', book_path(allbooks.id), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>

    <h2>New book</h2>


    <%= form_with model: @book do |f| %>
      <label>Title</label>
      <%= f.text_field :title %>

      <label>Body</label>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
  </body>
</html>
