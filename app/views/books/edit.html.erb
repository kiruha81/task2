<h1><strong>Editing Book</strong></h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class"form_field">
    <%= form_with model: @booklist, url: book_path(@booklist.id), method: :patch do |f| %>
    <div class="form_box">
      <label>Title</label><br>
      <%= f.text_field :title %><br>
    </div>
    <div class="form_box">
    <label>Body</label><br>
      <%= f.text_area :body %><br>
      <%= f.submit 'Update Book' %><br>
    </div>
  </div>

  <%= link_to 'Show', book_path(params[:id]) %> |

  <%= link_to "Back", books_path %>
<% end %>